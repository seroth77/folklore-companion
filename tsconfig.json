{
    "compilerOptions": {
        "baseUrl": ".",
        "jsx": "react",
        "module": "commonjs",
        "moduleResolution": "node",
        "lib": [
            "dom",
            "es2016",
        ],
        "noImplicitAny": true,
        "removeComments": true,
        "resolveJsonModule": true,
        "rootDirs": [
            "src"
        ],
        "sourceMap": true,
        "target": "es5",
        "typeRoots": [
            "node_modules/@types",
            "@types"
        ]
    },
    "include": [
        "src",
        "@types"
    ]
}